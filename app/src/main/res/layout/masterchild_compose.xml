<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/to_container_spinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/et_states"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/to_spinner"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/et_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/et_states"
        android:padding="10dp"
        android:hint="@string/subject"
        android:textColorHint="@color/color_hint"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="@color/color_black_light"
        android:layout_below="@id/to_container_spinner"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/et_subject"
        android:background="@drawable/et_states"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="58dp">
        <EditText
            android:id="@+id/et_sms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/compose_message"
            android:textColorHint="@color/color_hint"
            android:inputType="textMultiLine"
            android:textColor="@color/color_black_light"
            android:minHeight="900dp"
            android:textAlignment="textStart"
            android:gravity="start|top"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/send_container"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white">

        <RelativeLayout
            android:id="@+id/iv_send_container"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/bg_group_item_normal_state"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:clickable="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_send_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="33dp"
                android:layout_marginEnd="33dp"
                android:layout_marginTop="2dp"
                android:id="@+id/iv_send"
                android:contentDescription="@string/send_button" />
            <TextView
                android:id="@+id/tv_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_compose"
                android:textColor="@color/color_black_light"
                android:layout_below="@id/iv_send"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/transparent"/>
    </RelativeLayout>

</RelativeLayout>
