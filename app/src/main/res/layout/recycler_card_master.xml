<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_gravity="center"
    android:background="@color/color_white"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    card_view:cardCornerRadius="2dp"
    style="@style/CardViewStyle">

    <RelativeLayout
        android:id="@+id/card_container"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/bg_group_item_normal_state">
        <ImageView
            android:id="@+id/img_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:contentDescription="@string/sender_image_on_inbox"/>
        <TextView
            android:id="@+id/sender_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/img_person"
            android:layout_toEndOf="@id/img_person"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:text="@string/fname_sname"
            android:textColor="#000"
            android:textSize="18sp"
            style="@style/Base.TextAppearance.AppCompat.Body2"/>

        <RelativeLayout
            android:id="@+id/count_layout"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/unread_count_badge">
            <TextView
                android:id="@+id/count"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textColor="@color/color_white"
                style="@style/Base.TextAppearance.AppCompat.Body2"/>
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>