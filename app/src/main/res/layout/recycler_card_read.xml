<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_gravity="center"
    android:background="@color/color_white"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    card_view:cardCornerRadius="2dp"
    style="@style/CardViewStyle">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/bg_group_item_normal_state">
        <TextView
            android:id="@+id/subject"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="67dp"
            android:layout_marginEnd="67dp"
            android:text="@string/subject_subject"
            android:textColor="#000"
            android:textSize="18sp"
            android:maxLines="1"
            android:ellipsize="end"
            style="@style/Base.TextAppearance.AppCompat.Body2"/>
        <TextView
            android:id="@+id/message"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/subject"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="44dp"
            android:layout_marginEnd="44dp"
            android:text="@string/message_message"
            android:textColor="#000"
            android:maxLines="1"
            android:ellipsize="end"
            style="@style/Base.TextAppearance.AppCompat.Body2" />
        <TextView
            android:id="@+id/time"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/_19_30_45"
            android:textColor="@color/color_black_light"
            style="@style/Base.TextAppearance.AppCompat.Body2"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/check_id"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            android:button="@drawable/checkbox_states"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>